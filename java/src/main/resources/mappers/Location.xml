<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ihr_mini.Mapper.LocationMapper">
    <resultMap id="location" type="com.example.ihr_mini.Entity.Location">
        <id property="id" column="c_id" jdbcType="VARCHAR"/>
        <result property="name" column="c_name" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getLocations" resultMap="location">
        select * from t_location
    </select>

    <select id="getById" resultType="com.example.ihr_mini.Entity.Location">
        select * from t_location where c_id = #{id}
    </select>

    <select id="getNames" resultType="String">
        select c_name from t_location
    </select>


    <select id="getId" resultType="String">
        select c_id from t_location where c_name = #{name}
    </select>
    <select id="getName" resultType="String">
        select c_name from t_location where c_id = #{id}
    </select>

    <update id="setName">
        update t_location set c_name = #{name} where c_id = #{id}
    </update>

    <insert id="addLocation">
        insert into t_jobs(c_id,c_name) values(#{id},#{name})
    </insert>

</mapper>